@code {
    private List<Dossier>? dossiers;
    private Dossier? dossierSelectionne;
    private List<Tableau>? tableauxDisponibles;
    private Tableau? tableauSelectionne;
    private LigneTableau? ligneEntete;
    private List<LigneTableau>? lignesDonnees;

    // Variables pour le mode édition
    private bool modeEdition = false;
    private bool entetesVisible = false;
    private string messageErreur = string.Empty;
    private string messageSucces = string.Empty;
    private LigneTableau? ligneASupprimer;

    // Backup pour l'annulation
    private LigneTableau? ligneEnteteBackup;
    private List<LigneTableau>? lignesDonneesBackup;

    protected override async Task OnInitializedAsync()
    {
        await ChargerDossiers();
    }

    private async Task ChargerDossiers()
    {
        try
        {
            dossiers = await DossierService.GetDossiersAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors du chargement des dossiers: {ex.Message}");
        }
    }

    private async Task OnDossierSelected(ChangeEventArgs e)
    {
        tableauxDisponibles = null;
        tableauSelectionne = null;
        ligneEntete = null;
        lignesDonnees = null;

        if (int.TryParse(e.Value?.ToString(), out int dossierId) && dossierId > 0)
        {
            dossierSelectionne = dossiers?.FirstOrDefault(d => d.TdId == dossierId);
            if (dossierSelectionne != null)
            {
                await ChargerTableauxDuDossier();
            }
        }
        else
        {
            dossierSelectionne = null;
        }
    }

    private async Task ChargerTableauxDuDossier()
    {
        if (dossierSelectionne == null)
            return;

        try
        {
            tableauxDisponibles = await TableauService.GetTableauxByDossierIdAsync(dossierSelectionne.TdId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors du chargement des tableaux: {ex.Message}");
        }
    }

    private async Task OnTableauSelected(ChangeEventArgs e)
    {
        ligneEntete = null;
        lignesDonnees = null;

        if (int.TryParse(e.Value?.ToString(), out int tableauId) && tableauId > 0)
        {
            await ChargerTableau(tableauId);
        }
        else
        {
            tableauSelectionne = null;
        }
    }

    private async Task ChargerTableau(int tableauId)
    {
        try
        {
            tableauSelectionne = await TableauService.GetTableauByIdAsync(tableauId);
            if (tableauSelectionne != null && tableauSelectionne.Lignes != null)
            {
                var lignesOrdered = tableauSelectionne.Lignes.OrderBy(l => l.LtNumeroLigne).ToList();
                ligneEntete = lignesOrdered.FirstOrDefault(l => l.LtNumeroLigne == 0);
                lignesDonnees = lignesOrdered.Where(l => l.LtNumeroLigne > 0).ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors du chargement du tableau: {ex.Message}");
        }
    }

    // Méthodes pour le mode édition
    private void ActiverModeEdition()
    {
        modeEdition = true;
        messageErreur = string.Empty;
        messageSucces = string.Empty;

        // Sauvegarder l'état actuel pour pouvoir annuler
        if (ligneEntete != null)
        {
            ligneEnteteBackup = new LigneTableau
            {
                LtId = ligneEntete.LtId,
                LtTabId = ligneEntete.LtTabId,
                LtNumeroLigne = ligneEntete.LtNumeroLigne,
                LtLibelle = ligneEntete.LtLibelle,
                LtValeur1 = ligneEntete.LtValeur1,
                LtValeur2 = ligneEntete.LtValeur2,
                LtValeur3 = ligneEntete.LtValeur3,
                LtValeur4 = ligneEntete.LtValeur4,
                LtValeur5 = ligneEntete.LtValeur5,
                LtValeur6 = ligneEntete.LtValeur6,
                LtValeur7 = ligneEntete.LtValeur7,
                LtValeur8 = ligneEntete.LtValeur8,
                LtValeur9 = ligneEntete.LtValeur9,
                LtValeur10 = ligneEntete.LtValeur10
            };
        }

        if (lignesDonnees != null)
        {
            lignesDonneesBackup = lignesDonnees.Select(l => new LigneTableau
            {
                LtId = l.LtId,
                LtTabId = l.LtTabId,
                LtNumeroLigne = l.LtNumeroLigne,
                LtLibelle = l.LtLibelle,
                LtValeur1 = l.LtValeur1,
                LtValeur2 = l.LtValeur2,
                LtValeur3 = l.LtValeur3,
                LtValeur4 = l.LtValeur4,
                LtValeur5 = l.LtValeur5,
                LtValeur6 = l.LtValeur6,
                LtValeur7 = l.LtValeur7,
                LtValeur8 = l.LtValeur8,
                LtValeur9 = l.LtValeur9,
                LtValeur10 = l.LtValeur10
            }).ToList();
        }
    }

    private async Task EnregistrerModifications()
    {
        try
        {
            messageErreur = string.Empty;
            messageSucces = string.Empty;

            if (tableauSelectionne == null)
                return;

            // Enregistrer l'en-tête
            if (ligneEntete != null)
            {
                await TableauService.UpdateLigneTableauAsync(ligneEntete);
            }

            // Enregistrer les lignes de données
            if (lignesDonnees != null)
            {
                foreach (var ligne in lignesDonnees)
                {
                    if (ligne.LtId > 0)
                    {
                        await TableauService.UpdateLigneTableauAsync(ligne);
                    }
                    else
                    {
                        // Nouvelle ligne à créer
                        await TableauService.CreateLigneTableauAsync(ligne);
                    }
                }
            }

            messageSucces = "Modifications enregistrées avec succès.";
            modeEdition = false;

            // Recharger les données
            await ChargerTableau(tableauSelectionne.TabId);
        }
        catch (Exception ex)
        {
            messageErreur = $"Erreur lors de l'enregistrement : {ex.Message}";
        }
    }

    private async Task AnnulerModifications()
    {
        messageErreur = string.Empty;
        messageSucces = string.Empty;
        modeEdition = false;

        // Restaurer depuis le backup
        if (tableauSelectionne != null)
