@page "/details-tableau"
@using SimulationRetraite0.Models
@using SimulationRetraite0.Services
@inject DossierService DossierService
@inject TableauService TableauService
@rendermode InteractiveServer

<PageTitle>Détails Tableau</PageTitle>

<div class="container-fluid mt-4">
    <!-- Sélection du dossier -->
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">1. Sélectionner un dossier</h5>
                </div>
                <div class="card-body">
                    @if (dossiers == null || !dossiers.Any())
                    {
                        <p class="text-muted">Aucun dossier disponible.</p>
                    }
                    else
                    {
                        <select class="form-select" @onchange="OnDossierSelected">
                            <option value="">-- Sélectionner un dossier --</option>
                            @foreach (var dossier in dossiers)
                            {
                                <option value="@dossier.TdId" selected="@(dossierSelectionne?.TdId == dossier.TdId)">
                                    @dossier.TdNomClient @dossier.TdPrenomClient - @dossier.TdNomDossier
                                </option>
                            }
                        </select>
                    }
                </div>
            </div>
        </div>

        <!-- Sélection du tableau -->
        @if (dossierSelectionne != null)
        {
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">2. Sélectionner un tableau</h5>
                    </div>
                    <div class="card-body">
                        @if (tableauxDisponibles == null)
                        {
                            <div class="spinner-border spinner-border-sm" role="status">
                                <span class="visually-hidden">Chargement...</span>
                            </div>
                        }
                        else if (!tableauxDisponibles.Any())
                        {
                            <p class="text-muted">Aucun tableau disponible pour ce dossier.</p>
                        }
                        else
                        {
                            <select class="form-select" @onchange="OnTableauSelected">
                                <option value="">-- Sélectionner un tableau --</option>
                                @foreach (var tab in tableauxDisponibles)
                                {
                                    <option value="@tab.TabId" selected="@(tableauSelectionne?.TabId == tab.TabId)">
                                        [@tab.TabNumeroTableau] @tab.TabNomTableau
                                    </option>
                                }
                            </select>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Boutons d'action -->
    @if (tableauSelectionne != null)
    {
        <div class="row mb-3">
            <div class="col">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Actions</h5>
                    </div>
                    <div class="card-body">
                        <button class="btn btn-primary me-2" @onclick="ActiverModeEdition" disabled="@modeEdition">
                            <i class="bi bi-pencil"></i> Activer la modification
                        </button>
                        <button class="btn btn-success me-2" @onclick="EnregistrerModifications" disabled="@(!modeEdition)">
                            <i class="bi bi-save"></i> Enregistrer
                        </button>
                        <button class="btn btn-secondary" @onclick="AnnulerModifications" disabled="@(!modeEdition)">
                            <i class="bi bi-x-circle"></i> Annuler
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Messages -->
        @if (!string.IsNullOrEmpty(messageErreur))
        {
            <div class="row mb-3">
                <div class="col">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Erreur !</strong> @messageErreur
                        <button type="button" class="btn-close" @onclick="@(() => messageErreur = string.Empty)"></button>
                    </div>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(messageSucces))
        {
            <div class="row mb-3">
                <div class="col">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Succès !</strong> @messageSucces
                        <button type="button" class="btn-close" @onclick="@(() => messageSucces = string.Empty)"></button>
                    </div>
                </div>
            </div>
        }

        <!-- En-têtes éditables -->
        @if (ligneEntete != null && modeEdition)
        {
            <div class="row mb-3">
                <div class="col">
                    <div class="card">
                        <div class="card-header bg-warning d-flex justify-content-between align-items-center" style="cursor: pointer;" @onclick="ToggleEntetesVisibility">
                            <h6 class="mb-0">Modification des en-têtes</h6>
                            <span class="badge bg-dark">
                                @if (entetesVisible)
                                {
                                    <text>▲</text>
                                }
                                else
                                {
                                    <text>▼</text>
                                }
                            </span>
                        </div>
                        @if (entetesVisible)
                        {
                            <div class="card-body">
                                <div class="row g-2">
                                    <div class="col-md-3">
                                        <label class="form-label fw-bold">Colonne 1</label>
                                        <input type="text" class="form-control" @bind="ligneEntete.LtValeur1" placeholder="Nom colonne 1" />
                                    </div>
                                    <div class="col-md-3">
