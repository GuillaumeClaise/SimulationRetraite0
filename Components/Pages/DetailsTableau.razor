                                                @if (!string.IsNullOrEmpty(ligneEntete.LtValeur3)) { <th>@ligneEntete.LtValeur3</th> }
                                                @if (!string.IsNullOrEmpty(ligneEntete.LtValeur4)) { <th>@ligneEntete.LtValeur4</th> }
                                                @if (!string.IsNullOrEmpty(ligneEntete.LtValeur5)) { <th>@ligneEntete.LtValeur5</th> }
                                                @if (!string.IsNullOrEmpty(ligneEntete.LtValeur6)) { <th>@ligneEntete.LtValeur6</th> }
                                                @if (!string.IsNullOrEmpty(ligneEntete.LtValeur7)) { <th>@ligneEntete.LtValeur7</th> }
                                                @if (!string.IsNullOrEmpty(ligneEntete.LtValeur8)) { <th>@ligneEntete.LtValeur8</th> }
                                                @if (!string.IsNullOrEmpty(ligneEntete.LtValeur9)) { <th>@ligneEntete.LtValeur9</th> }
                                                @if (!string.IsNullOrEmpty(ligneEntete.LtValeur10)) { <th>@ligneEntete.LtValeur10</th> }
                                            }
                                            @if (modeEdition)
