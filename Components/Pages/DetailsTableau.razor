                                                </td>
                                                @if (ligneEntete != null)
                                                {
                                                    @if (!string.IsNullOrEmpty(ligneEntete.LtValeur1))
                                                    {
                                                        <td>
                                                            @if (modeEdition)
                                                            {
                                                                <input type="text" class="form-control form-control-sm" @bind="ligne.LtValeur1" />
                                                            }
                                                            else
                                                            {
                                                                <span class="text-end d-block">@ligne.LtValeur1</span>
                                                            }
                                                        </td>
                                                    }
                                                    @if (!string.IsNullOrEmpty(ligneEntete.LtValeur2))
                                                    {
                                                        <td>
                                                            @if (modeEdition)
                                                            {
                                                                <input type="text" class="form-control form-control-sm" @bind="ligne.LtValeur2" />
                                                            }
                                                            else
                                                            {
                                                                <span class="text-end d-block">@ligne.LtValeur2</span>
                                                            }
                                                        </td>
                                                    }
                                                    @if (!string.IsNullOrEmpty(ligneEntete.LtValeur3))
                                                    {
                                                        <td>
                                                            @if (modeEdition)
                                                            {
                                                                <input type="text" class="form-control form-control-sm" @bind="ligne.LtValeur3" />
                                                            }
                                                            else
                                                            {
                                                                <span class="text-end d-block">@ligne.LtValeur3</span>
                                                            }
                                                        </td>
                                                    }
                                                    @if (!string.IsNullOrEmpty(ligneEntete.LtValeur4))
                                                    {
                                                        <td>
                                                            @if (modeEdition)
                                                            {
                                                                <input type="text" class="form-control form-control-sm" @bind="ligne.LtValeur4" />
                                                            }
                                                            else
                                                            {
                                                                <span class="text-end d-block">@ligne.LtValeur4</span>
                                                            }
                                                        </td>
                                                    }
                                                    @if (!string.IsNullOrEmpty(ligneEntete.LtValeur5))
                                                    {
                                                        <td>
                                                            @if (modeEdition)
                                                            {
                                                                <input type="text" class="form-control form-control-sm" @bind="ligne.LtValeur5" />
                                                            }
                                                            else
                                                            {
                                                                <span class="text-end d-block">@ligne.LtValeur5</span>
                                                            }
                                                        </td>
                                                    }
                                                    @if (!string.IsNullOrEmpty(ligneEntete.LtValeur6))
                                                    {
                                                        <td>
                                                            @if (modeEdition)
                                                            {
                                                                <input type="text" class="form-control form-control-sm" @bind="ligne.LtValeur6" />
                                                            }
                                                            else
                                                            {
                                                                <span class="text-end d-block">@ligne.LtValeur6</span>
                                                            }
                                                        </td>
                                                    }
                                                    @if (!string.IsNullOrEmpty(ligneEntete.LtValeur7))
                                                    {
                                                        <td>
                                                            @if (modeEdition)
                                                            {
                                                                <input type="text" class="form-control form-control-sm" @bind="ligne.LtValeur7" />
                                                            }
                                                            else
                                                            {
                                                                <span class="text-end d-block">@ligne.LtValeur7</span>
                                                            }
                                                        </td>
                                                    }
                                                    @if (!string.IsNullOrEmpty(ligneEntete.LtValeur8))
                                                    {
                                                        <td>
                                                            @if (modeEdition)
                                                            {
                                                                <input type="text" class="form-control form-control-sm" @bind="ligne.LtValeur8" />
                                                            }
                                                            else
                                                            {
                                                                <span class="text-end d-block">@ligne.LtValeur8</span>
                                                            }
                                                        </td>
                                                    }
                                                    @if (!string.IsNullOrEmpty(ligneEntete.LtValeur9))
                                                    {
                                                        <td>
                                                            @if (modeEdition)
                                                            {
                                                                <input type="text" class="form-control form-control-sm" @bind="ligne.LtValeur9" />
                                                            }
                                                            else
                                                            {
                                                                <span class="text-end d-block">@ligne.LtValeur9</span>
                                                            }
                                                        </td>
                                                    }
                                                    @if (!string.IsNullOrEmpty(ligneEntete.LtValeur10))
                                                    {
                                                        <td>
                                                            @if (modeEdition)
                                                            {
                                                                <input type="text" class="form-control form-control-sm" @bind="ligne.LtValeur10" />
                                                            }
                                                            else
                                                            {
                                                                <span class="text-end d-block">@ligne.LtValeur10</span>
