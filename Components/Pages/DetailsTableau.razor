        }
    }

    private void AjouterNouvelleLigne()
    {
        if (lignesDonnees == null || tableauSelectionne == null)
            return;

        var nouveauNumero = lignesDonnees.Any()
            ? lignesDonnees.Max(l => l.LtNumeroLigne) + 1
            : 1;

        var nouvelleLigne = new LigneTableau
        {
            LtTabId = tableauSelectionne.TabId,
            LtNumeroLigne = nouveauNumero,
            LtLibelle = string.Empty,
            LtValeur1 = string.Empty,
            LtValeur2 = string.Empty,
            LtValeur3 = string.Empty,
            LtValeur4 = string.Empty,
            LtValeur5 = string.Empty,
            LtValeur6 = string.Empty,
            LtValeur7 = string.Empty,
            LtValeur8 = string.Empty,
            LtValeur9 = string.Empty,
            LtValeur10 = string.Empty
        };

        lignesDonnees.Add(nouvelleLigne);
    }

    private void ConfirmerSuppression(LigneTableau ligne)
    {
        ligneASupprimer = ligne;
    }

    private void AnnulerSuppression()
    {
        ligneASupprimer = null;
    }

    private async Task SupprimerLigne()
    {
        if (ligneASupprimer == null || lignesDonnees == null)
            return;

        try
        {
            messageErreur = string.Empty;
            messageSucces = string.Empty;

            // Si la ligne existe en base de données, la supprimer
            if (ligneASupprimer.LtId > 0)
            {
                await TableauService.DeleteLigneTableauAsync(ligneASupprimer.LtId);
            }

            // Retirer de la liste locale
            lignesDonnees.Remove(ligneASupprimer);

            // Renuméroter les lignes restantes
            var numeroLigne = 1;
            foreach (var ligne in lignesDonnees.OrderBy(l => l.LtNumeroLigne))
            {
                ligne.LtNumeroLigne = numeroLigne++;
                if (ligne.LtId > 0)
                {
                    await TableauService.UpdateLigneTableauAsync(ligne);
                }
            }

            messageSucces = "Ligne supprimée avec succès.";
            ligneASupprimer = null;
        }
        catch (Exception ex)
        {
            messageErreur = $"Erreur lors de la suppression : {ex.Message}";
            ligneASupprimer = null;
        }
    }

