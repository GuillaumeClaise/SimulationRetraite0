@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SimulationRetraite0</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dossiers">
                <span class="bi bi-folder-fill-nav-menu" aria-hidden="true"></span> Dossiers
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="saisie-data-mako">
                <span class="bi bi-table-nav-menu" aria-hidden="true"></span> Saisie Data Mako
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="saisie-data-mako6">
                <span class="bi bi-table-nav-menu" aria-hidden="true"></span> Saisie Data Mako 6
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tableaux">
                <span class="bi bi-grid-3x3-gap-fill-nav-menu" aria-hidden="true"></span> Tableaux
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="details-tableau">
                <span class="bi bi-card-list-nav-menu" aria-hidden="true"></span> Détails Tableau
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <span class="nav-link">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                    </span>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="logout">
                        <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Déconnexion
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Connexion
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

